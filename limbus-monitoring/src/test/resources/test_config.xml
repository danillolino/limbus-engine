<configuration>
	<processing>
		<maxThreads>4</maxThreads>
		<coreThreads>2</coreThreads>
		<threadKeepAliveUnit>SECONDS</threadKeepAliveUnit>
		<threadKeepAlive>30</threadKeepAlive>
	</processing>
	<publisher id="message-console">
		<instance class="org.max5.limbus.monitoring.publisher.ConsoleMessagePublisherImpl" />
	</publisher>
	<publisher id="message-console-timed">
		<instance class="org.max5.limbus.monitoring.publisher.DecoratedConsoleMessagePublisherImpl" />
	</publisher>

	<monitor pattern="org.testclient">
		<publisherRef>message-console</publisherRef>
	</monitor>

	<monitor pattern="org.testclient.packageA">
		<publisherRef>message-console-timed</publisherRef>
	</monitor>
</configuration>